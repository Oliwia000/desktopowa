<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="desktopowa.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" BackgroundColor="#FFF8DC" Spacing="20">

            <BoxView x:Name="BigBox" HeightRequest="120" Color="White"/>

            <Label Text="Dobierz kolor suwakiem i zapisz przyciskiem:"/>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="R" WidthRequest="20" VerticalOptions="Center"/>
                <Slider x:Name="SliderR" Minimum="0" Maximum="255" Value="255"
            ValueChanged="Slider_ValueChanged"
            HorizontalOptions="FillAndExpand"/>
                
                <Label x:Name="LabelR" Text="255" WidthRequest="40" 
           VerticalOptions="Center" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="G" WidthRequest="20" VerticalOptions="Center"/>
                
                <Slider x:Name="SliderG" Minimum="0" Maximum="255" Value="255"
            ValueChanged="Slider_ValueChanged"
            HorizontalOptions="FillAndExpand"/>
                <Label x:Name="LabelG" Text="255" WidthRequest="40" 
           VerticalOptions="Center" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="B" WidthRequest="20" VerticalOptions="Center"/>
                
                <Slider x:Name="SliderB" Minimum="0" Maximum="255" Value="255"
            ValueChanged="Slider_ValueChanged"
            HorizontalOptions="FillAndExpand"/>
                <Label x:Name="LabelB" Text="255" WidthRequest="40" 
           VerticalOptions="Center" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Button Text="Pobierz"
                    BackgroundColor="#CD853F" 
                    TextColor="White"
                    WidthRequest="250"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    Clicked="OnPobierzClicked"/>

            <Grid HeightRequest="60" WidthRequest="250" HorizontalOptions="Center">
                <BoxView x:Name="SmallBox" Color="White"/>
                <Label x:Name="LabelRGB" Text="255, 255, 255"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
